<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Vehicle List | AI Fleet Management</title>
</head>
<body>
    <header>
        <nav class="navbar">
            <a href="/admin/dashboard" class="navbar-brand">AI Fleet Manager</a>
            <ul class="nav-links">
                <% if (isAuthenticated) { %>
                    <li><a href="/admin/dashboard">Dashboard</a></li>
                    <li><a href="/vehicles">Vehicles</a></li>
                    <% if (user && user.role === 'admin') { %>
                        <li><a href="/admin/users">Users</a></li>
                        <li><a href="/auth/register">Create User</a></li>
                    <% } %>
                    <li><a href="/auth/logout">Logout (<%= user.username %>)</a></li>
                <% } else { %>
                    <li><a href="/auth/login">Login</a></li>
                <% } %>
            </ul>
        </nav>
    </header>

    <div class="container">
        <% if (typeof error_msg != 'undefined' && error_msg) { %>
            <div class="flash-message error"><%= error_msg %></div>
        <% } %>
        <% if (typeof success_msg != 'undefined' && success_msg) { %>
            <div class="flash-message success"><%= success_msg %></div>
        <% } %>

        <h1>Vehicle List</h1>
        <a href="/vehicles/add" class="btn btn-success mb-20">Add New Vehicle</a>

        <% if (vehicles.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Make</th>
                        <th>Model</th>
                        <th>Year</th>
                        <th>VIN</th>
                        <th>License Plate</th>
                        <th>Mileage</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% vehicles.forEach(vehicle => { %>
                        <tr>
                            <td><%= vehicle.make %></td>
                            <td><%= vehicle.model %></td>
                            <td><%= vehicle.year %></td>
                            <td><%= vehicle.vin %></td>
                            <td><%= vehicle.licensePlate %></td>
                            <td><%= vehicle.currentMileage %></td>
                            <td><%= vehicle.status %></td>
                            <td>
                                <a href="/vehicles/edit/<%= vehicle._id %>" class="btn btn-edit">Edit</a>
                                <form action="/vehicles/delete/<%= vehicle._id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this vehicle?');">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No vehicles registered yet.</p>
        <% } %>
    </div>

    <footer>
        <div class="container">
            <p>Â© <%= new Date().getFullYear() %> AI Fleet & Route Optimization Management System. All rights reserved.</p>
        </div>
    </footer>

    <script src="/js/main.js"></script>
</body>
</html>