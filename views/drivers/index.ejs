<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Driver Management | AI Fleet Management</title>
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <a href="/dashboard" class="sidebar-brand">
                <i class="fas fa-car"></i> AI Fleet Manager
            </a>
        </div>
        
        <div class="sidebar-menu">
            <% if (isAuthenticated) { %>
                <a href="/dashboard" class="sidebar-menu-item">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <a href="/vehicles" class="sidebar-menu-item">
                    <i class="fas fa-car"></i> Vehicles
                </a>
                <a href="/routes" class="sidebar-menu-item">
                    <i class="fas fa-route"></i> Routes
                </a>
                <a href="/trips" class="sidebar-menu-item">
                    <i class="fas fa-map-marked-alt"></i> Trips
                </a>
                <a href="/maintenance" class="sidebar-menu-item">
                    <i class="fas fa-tools"></i> Maintenance
                </a>
                <a href="/drivers" class="sidebar-menu-item active">
                    <i class="fas fa-user"></i> Drivers
                </a>
                <% if (user && user.role === 'admin') { %>
                    <a href="/admin/users" class="sidebar-menu-item">
                        <i class="fas fa-users"></i> Users
                    </a>
                    <a href="/auth/register" class="sidebar-menu-item">
                        <i class="fas fa-user-plus"></i> Create User
                    </a>
                <% } %>
                <a href="/auth/logout" class="sidebar-menu-item">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            <% } %>
        </div>
    </div>

    <div class="main-content">
        <div class="navbar">
            <button class="mobile-menu-toggle">
                <i class="fas fa-bars"></i>
            </button>
            <div class="navbar-brand">
                Driver Management
            </div>
            <div class="nav-links">
                <% if (isAuthenticated && user) { %>
                    <span><i class="fas fa-user"></i> <%= user.username %> (<%= user.role %>)</span>
                <% } %>
            </div>
        </div>

        <% if (locals.error_msg && error_msg.length > 0) { %>
            <div class="flash-message error"><%= error_msg %></div>
        <% } %>
        <% if (locals.success_msg && success_msg.length > 0) { %>
            <div class="flash-message success"><%= success_msg %></div>
        <% } %>

        <div class="page-header">
            <h1 class="page-title"><i class="fas fa-user"></i> Driver Management</h1>
            <p class="page-subtitle">Manage your fleet drivers</p>
        </div>

        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Drivers</h2>
                <button class="btn btn--primary">
                    <i class="fas fa-plus"></i> Add New Driver
                </button>
            </div>
            <div class="card-body">
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>License Number</th>
                                <th>License Type</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Performance</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>John Smith</td>
                                <td>DL12345678</td>
                                <td>B</td>
                                <td>555-123-4567</td>
                                <td><span class="status-indicator status-indicator--active">Available</span></td>
                                <td>
                                    <div class="performance-bar">
                                        <div class="performance-fill" style="width: 85%;">85%</div>
                                    </div>
                                </td>
                                <td>
                                    <button class="btn btn--secondary btn--sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <button class="btn btn--error btn--sm">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>Jane Doe</td>
                                <td>DL87654321</td>
                                <td>C</td>
                                <td>555-987-6543</td>
                                <td><span class="status-indicator status-indicator--on-trip">On Trip</span></td>
                                <td>
                                    <div class="performance-bar">
                                        <div class="performance-fill" style="width: 92%;">92%</div>
                                    </div>
                                </td>
                                <td>
                                    <button class="btn btn--secondary btn--sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <button class="btn btn--error btn--sm">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>Robert Johnson</td>
                                <td>DL24681357</td>
                                <td>B</td>
                                <td>555-456-7890</td>
                                <td><span class="status-indicator status-indicator--inactive">Off Duty</span></td>
                                <td>
                                    <div class="performance-bar">
                                        <div class="performance-fill" style="width: 78%;">78%</div>
                                    </div>
                                </td>
                                <td>
                                    <button class="btn btn--secondary btn--sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <button class="btn btn--error btn--sm">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h2 class="card-title">Driver Performance</h2>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <h3 class="chart-title">Driver Performance Metrics</h3>
                    <div class="chart-wrapper">
                        <canvas id="driverPerformanceChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Initialize driver performance chart
        document.addEventListener('DOMContentLoaded', function() {
            const ctx = document.getElementById('driverPerformanceChart');
            if (ctx) {
                const driverPerformanceChart = new Chart(ctx, {
                    type: 'radar',
                    data: {
                        labels: ['Fuel Efficiency', 'Time Efficiency', 'Safety', 'Customer Satisfaction', 'Punctuality'],
                        datasets: [
                            {
                                label: 'John Smith',
                                data: [85, 75, 90, 80, 85],
                                backgroundColor: 'rgba(76, 175, 80, 0.2)',
                                borderColor: 'rgba(76, 175, 80, 1)',
                                pointBackgroundColor: 'rgba(76, 175, 80, 1)',
                                pointBorderColor: '#fff',
                                pointHoverBackgroundColor: '#fff',
                                pointHoverBorderColor: 'rgba(76, 175, 80, 1)'
                            },
                            {
                                label: 'Jane Doe',
                                data: [92, 88, 95, 90, 85],
                                backgroundColor: 'rgba(33, 150, 243, 0.2)',
                                borderColor: 'rgba(33, 150, 243, 1)',
                                pointBackgroundColor: 'rgba(33, 150, 243, 1)',
                                pointBorderColor: '#fff',
                                pointHoverBackgroundColor: '#fff',
                                pointHoverBorderColor: 'rgba(33, 150, 243, 1)'
                            },
                            {
                                label: 'Robert Johnson',
                                data: [78, 82, 75, 85, 70],
                                backgroundColor: 'rgba(255, 193, 7, 0.2)',
                                borderColor: 'rgba(255, 193, 7, 1)',
                                pointBackgroundColor: 'rgba(255, 193, 7, 1)',
                                pointBorderColor: '#fff',
                                pointHoverBackgroundColor: '#fff',
                                pointHoverBorderColor: 'rgba(255, 193, 7, 1)'
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            r: {
                                angleLines: {
                                    color: 'rgba(255, 255, 255, 0.1)'
                                },
                                grid: {
                                    color: 'rgba(255, 255, 255, 0.1)'
                                },
                                pointLabels: {
                                    color: '#e0e0e0'
                                },
                                ticks: {
                                    color: '#e0e0e0',
                                    backdropColor: 'transparent'
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                labels: {
                                    color: '#e0e0e0'
                                }
                            }
                        }
                    }
                });
            }
        });
    </script>
</body>
</html>